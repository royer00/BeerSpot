@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}

<h2 class="text-center mt-3">@ViewBag.Title</h2>

<h3 class="text-danger text-center">Are you sure you want to delete this Role? </h3>
<p class="text-center text-secondary font-italic font-weight-bold">Deleting this Role will remove all users from this role. It will not delete the users.</p>
<div class="text-center">
   
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name):
        </dt>

        <dd class="font-weight-bold text-success">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-lg btn-danger" /> 
        </div>
    }
</div>
<div class=" offset-1 btn btn-outline-warning mb-3">
    @Html.ActionLink("Back to Roles","Index")
</div>

