@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Role Details";
}

<h2 class="text-center mt-3">@ViewBag.Title</h2>

<div class="col-md-12 text-center">
    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <h3 class="text-secondary">List of users in this role:</h3>
    @if (ViewBag.UserCount == 0)
    {
        
        <p>No users found in this role.</p>
    }

    <table class="table font-weight-bolder">

        @foreach (var item in ViewBag.Users)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
            </tr>
        }
    </table>
</div>
<p class="offset-1 btn btn-outline-warning">
    @Html.ActionLink("Edit Role", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to Roles", "Index")
</p>



