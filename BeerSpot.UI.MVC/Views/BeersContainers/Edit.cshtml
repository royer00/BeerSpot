@model BeerSpot.DATA.EF.BeersContainer

@{
    ViewBag.Title = "Edit Beer/Container";
}

<h2 class="text-center mt-3 mb-3">@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal contact-form col-md-8 offset-2">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BeersContainersID)

        <div class="form-group">
            @Html.LabelFor(model => model.BeerID, "BeerID", htmlAttributes: new { @class = "control-label col-md-2 offset-2" })
            <div class="offset-2 col-md-8">
                @Html.DropDownList("BeerID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BeerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContainerID, "ContainerID", htmlAttributes: new { @class = "control-label col-md-2 offset-2" })
            <div class="offset-2 col-md-8">
                @Html.DropDownList("ContainerID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContainerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Save Changes" class="btn btn-warning offset-2 mt-3" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Beers/Containers", "Index",null, new { @class="btn btn-warning mt-5 offset-1"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
