@model BeerSpot.DATA.EF.BeersContainer

@{
    ViewBag.Title = "Delete This Relationship?";
}

<h2 class="text-center mt-3 mb-3">@ViewBag.Title</h2>

<h3 class="text-center alert-danger">Are you sure you want to delete this?</h3>
<div class="text-center contact-form col-md-8 offset-2">
    
    <dl class="dl-horizontal font-weight-bold" style="font-size: 1.5em;">
        <dt>
            @Html.DisplayNameFor(model => model.Beer.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Beer.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Container.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Container.Type)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "Index", null, new { @class="btn btn-warning"})
        </div>
    }
</div>
