@model BeerSpot.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "User Details";
}

<h2 class="text-center mt-3">@ViewBag.Title</h2>

<div class="text-center">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<div class="text-center">
    <h4 class="text-secondary">List of roles for this user:</h4>
    @if (ViewBag.RoleNames.Count == 0)
    {
        
        <p>No roles found for this user.</p>
    }

    <table class="table font-weight-bolder">

        @foreach (var item in ViewBag.RoleNames)
        {
            <tr>
                <td>
                    @item
                </td>
            </tr>
        }
    </table>
</div>
<p class="btn btn-outline-warning offset-1">
    @Html.ActionLink("Edit User", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to Users", "Index")
</p>



