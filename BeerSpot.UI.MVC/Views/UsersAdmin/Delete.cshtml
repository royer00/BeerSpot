@model BeerSpot.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<h2 class="text-center">@ViewBag.Title</h2>

<h3 class="text-danger text-center">Are you sure you want to delete this User?</h3>
<div class="text-center">
    
    
    <dl class="dl-horizontal font-weight-bold">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-lg btn-danger" /> 
        </div>
        
    }
</div>
<div class="offset-1 mb-3">
    <a href="@Url.Action("Index","UsersAdmin")" class="btn btn-outline-warning">Back To Users</a>
</div>
