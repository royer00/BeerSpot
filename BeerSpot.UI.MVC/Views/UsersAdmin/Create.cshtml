@model BeerSpot.UI.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Create A User";
}

<h2 class="text-center mt-3">@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-error" })
    <div class="contact-form offset-3 col-md-6 mb-3">
        <div class="form-group">
           
            <div class="offset-1 col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder="Email Address" })
            </div>
        </div>
        <div class="form-group">
           
            <div class="offset-1 col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder="Password" })
            </div>
        </div>
        <div class="form-group">
           
            <div class="offset-1 col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder="Confirm Password" })
            </div>
        </div>
        <div class="form-group">
            <label class="offset-1 col-md-2 control-label">
                Select User Role
            </label>
            <div class="offset-1 col-md-10">
                @foreach (var item in (SelectList)ViewBag.RoleId)
                {
                    <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label" })
                }
            </div>
        </div>
        <div class="form-groups">
            <div class="offset-1 col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-lg btn-warning" value="Create" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
