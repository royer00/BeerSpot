@model BeerSpot.UI.MVC.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h2 class="text-center mt-3">@ViewBag.Title</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
<div class="contact-form offset-3 col-md-6 mb-3" >
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="offset-1 form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
               @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="offset-1 form-group">
            @Html.Label("Roles", new { @class = "control-label col-md-2" })
            <span class=" col-md-10">
                @foreach (var item in Model.RolesList)
                {
                    <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label" })
                }
            </span>
        </div>

        <div class="form-group">
            <div class="offset-1 col-md-offset-2 col-md-10">
                <input type="submit" value="Save User" class="btn btn-lg btn-warning" />
            </div>
        </div>
    </div></div>
}

<div class="offset-1 ">
    <a href="@Url.Action("Index", "UsersAdmin")" class="btn btn-outline-warning">Back to Users</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
