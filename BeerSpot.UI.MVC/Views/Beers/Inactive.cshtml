@model IEnumerable<BeerSpot.DATA.EF.Beer>

@{
    ViewBag.Title = "Inactive Beers";
}

<h2 class="text-center mb-3 mt-3">@ViewBag.Title</h2>

<p class="offset-1">
    @Html.ActionLink("View Active Beers", "Index", "Beers", null, new { @class = "btn btn-lg btn-success" })
</p>
<div class="offset-1 col-md-10">
    <table id="beersInactiveTable" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PricePerBeer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ABV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BeerImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsSeasonal)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsFeatured)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BeersStatu.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brewer.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Style.StyleName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerBeer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ABV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BeerImage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsSeasonal)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsFeatured)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BeersStatu.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brewer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Style.StyleName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BeerID }) |
                        @*@Html.ActionLink("Details", "Details", new { id=item.BeerID }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.BeerID })*@
                        @Html.ActionLink("Activate Beer", "Delete", "Beers", new { id = item.BeerID }, new { @class = "text-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#beersInactiveTable').DataTable();
        });
    </script>
}
