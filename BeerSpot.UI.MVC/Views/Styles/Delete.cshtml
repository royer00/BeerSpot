@model BeerSpot.DATA.EF.Style

@{
    ViewBag.Title = "Delete " + Model.StyleName;
}

<h2 class="text-center mb-3 mt-3">@ViewBag.Title</h2>

<h3 class="text-center text-danger">Are you sure you want to delete @Model.StyleName?</h3>
<div>
    
   

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value=" Yes, Delete" class="btn btn-lg btn-danger" /> 
            @Html.ActionLink("Cancel", "Index", null, new { @class="btn btn-lg btn-success"})
        </div>
    }
</div>
